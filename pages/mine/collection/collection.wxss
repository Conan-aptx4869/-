@import "../../common/common.wxss";
page{
        height: auto;
}
.admin_btn {
        height: 65rpx;
        line-height: 65rpx;
        border-top: 1px solid #ccc;
        text-align: right;
        padding-right: 40rpx;
        color: #ff5622;
        font-size: 26rpx;
        background: #fff;
        margin-bottom: 20rpx;
}
.goods_listx .item{
        white-space : nowrap ;
}
.goods_listx .item label {
        display: inline-block;
        vertical-align: middle
}
.goods_listx .item .content {
        display: inline-block;
        vertical-align: middle
}
.goods_listx .item .content .info .name {
        white-space: normal
}

.label-1, .label-2 {
        margin-bottom: 15px;
}

.label-1__text, .label-2__text {
        display: inline-block;
        vertical-align: middle;
}

.label-1__icon {
        border-radius: 50%;
        position: relative;
        margin-right: 10rpx;
        display: inline-block;
        vertical-align: middle;
        width: 35rpx;
        height: 35rpx;
}

.label-1__icon-checked {
        position: absolute;
        left: 0;
        right: 0;
        bottom: 0;
        top: 0;
        margin: auto;
        border-radius: 50%;
        width: 35rpx;
        height: 35rpx;
}

.label-1__icon-checked image{
        width: 100%;
        height: 100%;
}
.delete{
        position: fixed;
        bottom: 0;
        width: 100%;
        z-index: 99;
        display: flex;
        background: #fff;
        flex-direction: row;
        justify-content: space-between;
}
.delete>view{
        height: 90rpx;
        width: 230rpx;
        line-height: 90rpx;
        text-align: center;
        font-size: 30rpx;
}
.delete .select>image{
        width: 38rpx;
        height: 38rpx;
        vertical-align: sub;
        margin-right: 8rpx;
}
.delete  .detele_btn{
        background: #ff5622;
        color: #fff;
}
