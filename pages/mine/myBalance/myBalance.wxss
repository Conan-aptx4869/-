 @import "../../common/common.wxss";
page{
        background: #fff;
}
.balanceNum  .total{
        width: 150rpx;
        height: 150rpx;
        word-wrap:break-all;
        border-radius: 50%;
        background: #ff5722;
        text-align: center;
        font-size: 20rpx;
        color: #fff;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        margin: 60rpx auto 50rpx;
      
}
.balanceNum  .total text{
        font-size: 28rpx;
        display: block;
}
.number{
        text-align: center;
        font-size: 26rpx;
        color: #ccc;
}
.balance_list{
        padding: 0 20rpx;
}
.balance_list .item{
        padding: 8rpx 0;
        border-bottom: 1px solid #ccc;
        color: #4d4d4d;
        font-size: 28rpx;
        line-height: 45rpx;
        overflow: hidden;
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-items: flex-end;
}
.balance_list .item text{
        font-size: 22rpx;
        display: block;
}
.balance_list .item .money{
        color: #ff5722;
}

 
