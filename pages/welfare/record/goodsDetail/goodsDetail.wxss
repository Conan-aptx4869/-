@import "../../../common/common.wxss";
@import "../record.wxss";
.card_list .goods {
        margin-top: 40rpx;
}
.card_list .goods .title{
        font-size: 30rpx;
        margin-bottom: 30rpx;
}
.card_list .goods .title image{
        width: 33rpx;
        height: 37rpx;
        vertical-align: -8rpx;
        margin-right: 15rpx;
}
.card_list .goods .info{
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        margin-bottom:40rpx; 
}
.card_list .goods .info .right{
        width: 460rpx;
}
.card_list .goods .info .right .name {
        font-weight: bold;
}
.card_list .goods .info .right  .num{
        text-align: right;
        color: #666;
        margin: 15rpx 0;
}
.card_list .goods .info .right  .price{
        color: #ff5722;
}
.card_list .goods .info .photo{
        width: 150rpx;
        height: 150rpx;
}
.card_list .goods .address_content{
        width: 685rpx;
        padding: 30rpx;
        line-height: 40rpx;
        background: #f5f5f5;
}