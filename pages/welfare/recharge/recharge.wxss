/* pages/welfare/recharge/recharge.wxss */
page{
  background-color: #f3f3f3;
}
form{
  background-color: #fff;
  display: block;
  width: 710rpx;
  height: 435rpx;
  margin: 30rpx auto;
  padding: 30rpx;
  box-sizing: border-box;
}
form .title{
  font-size: 26rpx;
  margin-bottom: 10rpx;
}
form label{
  height: 100rpx;
  border-bottom: 1px solid #cdcdcd;
  width: 100%;
  display: block;
  margin-bottom:100rpx; 
}
form label .symbol{
  margin-right: 20rpx;
  font-size: 48rpx;
  height: 100%;
   vertical-align: middle;
}

form label input{
  display: inline-block;
  vertical-align: middle;
  width: 580rpx;
  height: 100%;
}
form button{
  width:550rpx;
  height:70rpx;
  line-height: 70rpx;
  background-color:#fe5722;
  border-radius: 12rpx;
  color: #fff;
  font-size: 34rpx;
}